{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "target": "ES2018",
    "lib": ["ES2018"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src/index.ts", "src/blacklist.ts"],
  "exclude": ["node_modules", "lib/**/*", "coverage/**/*", "src/__test__/**/*"]
}
